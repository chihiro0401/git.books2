<div><%= flash[:notice] %></div>
<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

    <%= link_to edit_user_path(@user.id) ,class: "btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i>
    <% end %>


    <% if @new.errors.any? %>
      <%= @new.errors.count %>errors prohibited this book from being saved:
       <ul>
      <% @new.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>

      <%= form_with model: @new do |f| %>

       <h2>New book</h2>
        <p>Title</p>
       <%= f.text_field :title %>

       <p>Body</p>
        <%= f.text_area :body %>

       <%= f.submit 'Create Book' %>
       <% end %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class= "table table-hobver table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
      <tr>
         <td>
          <%=link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
         </td>
       <td><%=link_to book.title,book_path(book.id) %></td>
       <td><%= book.body %></td>
       </tr>
        <% end %>
    </tbody>
  </table>
</div>
</div>
</div>



