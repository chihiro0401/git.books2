
<div class ="container">
  <div class ="row">
   <div class="col-sm-12 col-md-8 col-lg5 px-5 px-sm-0 mx-auto">
    <h1>User info</h1>

     <% if @user.errors.any? %>
       <%= @user.errors.count %>件エラーが発生しました。
       <ul>
       <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
     <% end %>

 <%= form_with model: @user do |f| %>
  <div for="inputName">
   <p>Name</p>
   <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
     <div for="inputImage">
      <p>ProfileImage</p>
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
       <p>Introduction</p>
        <%= f.text_area :introduction %>
         <%= f.submit 'Update User' %>
  <% end %>
  </div>
  </div>
</div>
</div>
</div>